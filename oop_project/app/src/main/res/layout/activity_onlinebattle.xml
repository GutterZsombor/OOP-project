<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@android:color/white"
    android:padding="12dp">

    <!-- BATTLE title -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="BATTLE ONLINE"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textColor="@android:color/white"
        android:background="#8000FF"
        android:gravity="center"
        android:padding="8dp"
        android:layout_marginBottom="8dp"
        android:backgroundTint="#8000FF"
        android:backgroundTintMode="src_in"/>

    <!-- Battle card row -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginBottom="8dp">


        <!-- <include layout="@layout/bhunterbattlecard" />-->

        <androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:card_view="http://schemas.android.com/apk/res-auto"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            xmlns:app="http://schemas.android.com/tools"

            android:layout_margin="8dp"
            card_view:cardCornerRadius="12dp"
            card_view:cardElevation="6dp"
            app:ignore="NamespaceTypo">

            <LinearLayout
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:padding="8dp">


                <ImageView
                    android:id="@+id/hunter_imagehome"
                    android:layout_width="80dp"
                    android:layout_height="80dp"

                    android:scaleType="centerCrop"

                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:srcCompat="@mipmap/boba" />

                <!-- Name -->
                <TextView
                    android:id="@+id/hunter_namehome"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Pinky"
                    android:textStyle="bold"
                    android:textColor="@android:color/black"
                    android:textSize="16sp" />

                <!-- HP Progress -->
                <ProgressBar
                    android:id="@+id/hpBarhome"
                    style="?android:attr/progressBarStyleHorizontal"
                    android:layout_width="match_parent"
                    android:layout_height="10dp"
                    android:layout_marginTop="4dp"
                    android:progress="100"
                    android:max="100"
                    android:progressDrawable="@drawable/green_progressbar" />

                <!-- HP Text -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/hpTextViewhome"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="2dp"
                        android:text="HP:"
                        android:textColor="@android:color/black"
                        android:textSize="12sp"
                        android:layout_weight="1"/>

                    <TextView
                        android:id="@+id/hpTexthome"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="2"
                        android:text="180/180"
                        android:textSize="12sp"/>
                </LinearLayout>

