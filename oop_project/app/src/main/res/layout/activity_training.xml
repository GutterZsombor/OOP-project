<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#FFFFFF"
    android:padding="16dp">

    <!-- Title -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Training Area"
        android:textSize="22sp"
        android:textColor="#800080"
        android:layout_gravity="center"
        android:paddingBottom="16dp" />

    <LinearLayout
        android:id="@+id/hunterCardContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        android:gravity="center" >


    </LinearLayout>

    <!-- Training Buttons -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:paddingTop="24dp"
        android:paddingBottom="24dp">

        <TextView
            android:id="@+id/textViewTrainingProg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="" />

        <ProgressBar
            android:id="@+id/trainingProgress"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:progressDrawable="@drawable/green_progressbar"/>

        <Button
            android:id="@+id/btnTrainMelee"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Train Melee"
            android:backgroundTint="#800080"
            android:textColor="#FFFFFF"
            android:layout_marginBottom="12dp" />

        <Button
            android:id="@+id/btnTrainRange"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Train Range"
            android:backgroundTint="#800080"
            android:textColor="#FFFFFF"
            android:layout_marginBottom="12dp" />

        <Button
            android:id="@+id/btnTrainXP"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Train XP"
            android:backgroundTint="#800080"
            android:textColor="#FFFFFF" />
    </LinearLayout>

    <!-- Move to Home Button at the bottom -->
    <Button
        android:id="@+id/btnMoveHome"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Move to Home"
        android:background="#800080"
        android:textColor="#FFFFFF"
        android:layout_gravity="bottom"
         />

</LinearLayout>
